{
  "id": "golinks",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "skumaran/golinks:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 5000,
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ]
    }
  },
  "labels": {
    "CREATED_BY": "skumaran@mesosphere.io",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "go.mesosphere.com"
  },
  "acceptedResourceRoles": ["*"],
  "instances": 1,
  "cpus": 0.5,
  "mem": 64,
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/"
    },
    {
      "protocol": "COMMAND",
      "command" : { "value": "curl -S --fail http://0.0.0.0:5000/test" }
    }
  ]
}